@model IEnumerable<LibraryWebApp.Models.fee>

@{
    ViewBag.Title = "Index";
}

<h2>Fees</h2>

<p>
    @if ((Session["Role"]?.ToString() == "1") || (Session["Role"]?.ToString() == "2"))
    {
        @*@Html.ActionLink("Create New", "Create", null, new { @class = "underline" })*@
        <a href="@Url.Action("Create")" class="button-link-create">Create New</a>
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.create_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.remaining_fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_paid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.checkout_records.transaction_id)
        </th>
        
        
        
        <th>
            @Html.DisplayNameFor(model => model.user.username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="table_row">
        <td>
            @Html.DisplayFor(modelItem => item.create_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.remaining_fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.is_paid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.checkout_records.transaction_id)
        </td>
       
        
        <td>
            @Html.DisplayFor(modelItem => item.user.username)
        </td>
       
        
      
        <td>
            @if ((Session["Role"]?.ToString() == "1") || (Session["Role"]?.ToString() == "2"))
            {
                @*  @Html.ActionLink("Edit ", "Edit", new { id = item.fee_id }, new { @class = "underline" }) *@
                <a href="@Url.Action("Edit", new { id = item.fee_id })" class="button-link-edit">Edit</a>
                @*  @Html.ActionLink("Delete ", "Delete", new { id = item.fee_id }, new { @class = "underline" }) *@
                <a href="@Url.Action("Delete", new { id = item.fee_id })" class="button-link-delete">Delete</a>
            }
            @* @Html.ActionLink("Details", "Details", new { id = item.fee_id }, new { @class = "underlinezz" }) *@
            <a href="@Url.Action("Details", new { id = item.fee_id })" class="button-link-detail">Detail</a>
        </td>
    </tr>
}

</table>
